<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="./css/styles.css" />
</head>

<body>
    <div class="registration-container">
        <div class="intro">
            <p>Registration in NodeChat</p>
        </div>
        <hr class="hr">
        <div class="registration">
            <form action="/register" method="post">
                <label>Name</label><br>
                <input class="input" type="text" name="name" /><br><br>

                <label>E-mail</label><br>
                <input class="input" type="text" name="email" /><br><br>

                <label>Password</label><br>
                <input class="input" type="password" name="password" /><br><br>

                <button class="btn registration-submit-btn" type="submit" name="submit">Register</button>
            </form>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/libs/jquery-3.3.1.min.js"></script>
    <script>
       $("form").submit(function(e) {
            e.preventDefault(); // Prevents the page from refreshing
            var $this = $(this); // `this` refers to the current form element
            $.post(
                $this.attr("action"), // Gets the URL to sent the post to
                $this.serialize(), // Serializes form data in standard format
                function(data) { /** code to handle response **/ },
                "json" // The format the response should be in
            );
        });
    </script>
    
</body>

</html>